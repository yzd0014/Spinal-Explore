<mujoco>
    <option timestep="0.001">
		<flag gravity="disable"/>
	</option>
    <size nuserdata="3"/>
   <worldbody>
      <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
      <geom type="plane" size="1 1 0.1" rgba=".9 0 0 1"/>
      <site name="s0" pos="0.1 0 2" size="0.02"/>
      <site name="s2" pos="-0.1 0 2" size="0.02"/>
      <body pos="0 0 1.5" euler="0 0 0">
         <joint name="joint0" type="hinge" axis="0 -1 0" pos="0 0 0.5" damping="0.0"/>
         <geom name="pendulum" type="cylinder" size="0.05 .5" rgba="0 .9 0 1" mass="1"/>
         <site name="s1" pos="0.06 0 -0.1" size="0.02"/>
         <site name="s3" pos="-0.06 0 -0.1" size="0.02"/>
      </body>
   </worldbody>
   <tendon>
       <spatial name="r-tendon" width="0.01">
            <site site="s0"/>
            <site site="s1"/>
       </spatial>
   </tendon>
   <tendon>
       <spatial name="l-tendon" width="0.01">
            <site site="s2"/>
            <site site="s3"/>
       </spatial>
   </tendon>
   <actuator> 
        <position name="position" joint="joint0" kp="0" ctrlrange="-3 3"/>
        <!-- <motor name="motor" joint="joint0" ctrlrange="-1000000 1000000"/> -->
        <!-- <muscle  name="r-muscle" tendon="r-tendon" range="0.75 1.05" scale="10000000000"/> -->
        <!-- <muscle  name="l-muscle" tendon="l-tendon" range="0.75 1.05" scale="10000000000"/> -->
        <muscle  name="r-muscle" tendon="r-tendon" range="0.75 1.15" scale="40"/>
        <muscle  name="l-muscle" tendon="l-tendon" range="0.75 1.15" scale="40"/>
   </actuator>
</mujoco>